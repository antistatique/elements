{
  "id": "epfl_elements",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1280,
      "height": 990
    }
  ],
  "scenarios": [
    {
      "label": "Card types",
