{% set classes = 'nav-toggle' %}

{% include '@molecules/access-nav/access-nav.twig' %}

<div class="{{ classes }}">
  {% block header %}
    {% include '@organisms/header/header.twig' %}
  {% endblock %}

  <div class="main-container {{ classes }}">

    {% block nav %}
      {% include '@molecules/nav/nav.twig' with {'no_toggle_wrapper' : true} %}
    {% endblock %}

    {% block breadcrumb %}
      <div class="container nav-toggle-container">
        {% include '@molecules/nav/nav-toggle.twig' %}
        {% include '@organisms/breadcrumbs/breadcrumbs.twig' %}
      </div>
    {% endblock %}

    <main id="main" role="main" class="content">

      {% block content %}{% endblock %}

      {% block footer_container %}
        <div class="bg-gray-100 pt-5 mt-5">
          <div class="container">
            {% block footer %}
              {% include '@organisms/footer/footer-dark.twig' %}
            {% endblock %}
          </div>
        </div>
      {% endblock %}
    </main>
  </div>
</div>
